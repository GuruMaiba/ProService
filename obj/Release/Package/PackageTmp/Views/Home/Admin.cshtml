@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <title>Pro Service | Профессиональный ремонт техники </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    @Styles.Render("~/Content/main.css")
</head>
<body>
    <main class="auth">
        <form class="form" method="post">
            <div class="logo"><img src="~/img/logo.png" alt="Pro Service. Профессиональный ремонт техники"></div>
            <div class="form__group">
                <input class="form__input" type="text" name="secretKey" required>
                <label class="form__label" for="name">AdminProService</label><span class="highlight"></span>
            </div>
            <div class="form__group">
                <button class="form__button" type="submit">Войти</button>
            </div>
            <div class="error">@ViewBag.error</div>
        </form>
    </main>
</body>
</html>